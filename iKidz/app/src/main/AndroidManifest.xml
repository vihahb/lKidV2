<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sproject.ikidz">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".iKidApplications"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.home.HomeActivity"
            android:label="@string/title_newsfeed" />
        <activity android:name=".view.activity.login.LoginActivity" />
        <activity android:name=".view.activity.editProfile.EditProfileActivity" />
        <activity android:name=".view.activity.login.ResetPasswordActivity" />
        <activity android:name=".view.activity.drug.teacher.DrugActivity" />
        <activity android:name=".view.activity.attendance.in.AttendanceInActivity" />
        <activity android:name=".view.activity.attendance.out.AttendanceOutActivity" />
        <activity android:name=".view.activity.absent.AbsentsActivity" />
        <activity android:name=".view.fragment.news.showImage.ShowImageActivity" />
        <activity android:name=".view.activity.learnOverTime.LearnOverTimeActivity" />
        <activity android:name=".view.activity.curentClass.CurentClassActivity" />
        <activity android:name=".view.activity.foreignActivity.ForeignActivity" />
        <activity android:name=".view.activity.foreignActivity.foreignInfo.ForeignInfoActivity" />
        <activity android:name=".view.activity.school.SchoolActivity" />
        <activity android:name=".view.activity.school.info.SchoolsNewsInfo" />
        <activity android:name=".view.activity.shuttleBus.ShuttlesBusActivity" />
        <activity android:name=".view.activity.subscribeToEat.SubscribeToEatActivity" />
        <activity android:name=".view.activity.campaign.CampaignActivity" />
        <activity android:name=".view.activity.campaign.info.CampaignInfoActivity" />
        <activity android:name=".view.activity.learnActivity.LearnActivity" />
        <activity android:name=".view.activity.schoolProfile.SchoolProfileActivity" />
        <activity android:name=".view.activity.schoolProfile.info.ProfileInfoActivity" />
        <activity android:name=".view.activity.message.MessageDetailActivity"/>
        <receiver
            android:name=".view.activity.message.broadcast.ChatBroadcast"
            android:exported="true">
            <intent-filter>
                <action android:name="com.sproject.added_message" />
                <action android:name="com.sproject.added_room" />
            </intent-filter>
        </receiver>
    </application>

</manifest>