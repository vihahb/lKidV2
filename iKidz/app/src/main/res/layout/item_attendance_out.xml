<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/size_64"
    android:paddingTop="@dimen/size_8"
    android:paddingLeft="@dimen/size_8">

    <TextView
        android:id="@+id/tv_number_row"
        android:layout_width="@dimen/size_24"
        android:layout_height="match_parent"
        android:textColor="@color/black_85"
        android:textSize="@dimen/font_14"
        android:textStyle="bold"
        android:text="1"
        android:gravity="center"/>

    <com.sproject.ikidz.sdk.Utils.RoundImage
        android:id="@+id/img_avatar"
        android:layout_marginLeft="@dimen/size_8"
        android:layout_width="@dimen/size_48"
        android:layout_height="@dimen/size_48"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/size_8"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_54">
        <TextView
            android:id="@+id/tv_attend_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_100"
            android:textSize="@dimen/font_13"
            android:layout_marginBottom="@dimen/size_2"
            android:text=" VI VH"/>

        <RadioGroup
            android:id="@+id/rdo_group_in"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_22"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rdo_chuave"
                android:text="Chưa về"
                android:layout_weight="1"
                android:textSize="@dimen/font_9"
                android:layout_width="@dimen/size_0"
                android:layout_height="@dimen/size_24"
                android:theme="@style/RadioButtonRed"/>
            <RadioButton
                android:id="@+id/rdo_dave"
                android:text="Đã về"
                android:layout_weight="1"
                android:textSize="@dimen/font_9"
                android:layout_width="@dimen/size_0"
                android:layout_height="match_parent"
                android:theme="@style/RadioButtonGreen"/>
        </RadioGroup>

        <View
            android:layout_marginLeft="@dimen/size_4"
            android:layout_marginTop="@dimen/size_4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0_5"
            android:background="@color/black_40"/>
    </LinearLayout>

</LinearLayout>