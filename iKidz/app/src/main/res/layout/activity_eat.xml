<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.eatActivity.EatActivity">

    <include layout="@layout/toolbar_layout" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/size_8"
                android:paddingLeft="@dimen/size_8"
                android:paddingRight="@dimen/size_8"
                android:paddingTop="@dimen/size_8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chọn ngày"
                    android:textColor="@color/black_75"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_8"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/edt_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_edit_text_attended"
                        android:focusableInTouchMode="false"
                        android:longClickable="false"
                        android:paddingBottom="@dimen/size_4"
                        android:paddingLeft="@dimen/size_8"
                        android:paddingTop="@dimen/size_4"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/font_14" />

                    <ImageView
                        android:layout_width="@dimen/size_24"
                        android:layout_height="@dimen/size_24"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="@dimen/size_8"
                        android:padding="@dimen/size_4"
                        android:src="@mipmap/ic_calendar" />
                </FrameLayout>

                <Button
                    android:id="@+id/btn_update"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_30"
                    android:layout_marginLeft="@dimen/size_8"
                    android:background="@drawable/button_radius_color_primary"
                    android:text="Cập nhật"
                    android:textAllCaps="false"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/size_8"
                android:paddingRight="@dimen/size_8">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thực đơn của lớp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/font_16" />

                <LinearLayout
                    android:id="@+id/ln_breakfast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/size_16"
                    android:paddingRight="@dimen/size_16">

                    <ImageView
                        android:layout_width="@dimen/size_8"
                        android:layout_height="@dimen/size_8"
                        android:src="@mipmap/ic_ellipse_blue" />

                    <TextView
                        android:id="@+id/tv_breakfast"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_16"
                        android:text="Bữa sáng: " />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_snack_time_morning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/size_16"
                    android:paddingRight="@dimen/size_16">

                    <ImageView
                        android:layout_width="@dimen/size_8"
                        android:layout_height="@dimen/size_8"
                        android:src="@mipmap/ic_ellipse_blue" />

                    <TextView
                        android:id="@+id/tv_snack_time_morning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_16"
                        android:text="Bữa phụ sáng: " />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_lunch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/size_16"
                    android:paddingRight="@dimen/size_16"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/size_8"
                        android:layout_height="@dimen/size_8"
                        android:src="@mipmap/ic_ellipse_blue" />

                    <TextView
                        android:id="@+id/tv_lunch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_16"
                        android:text="Bữa trưa: " />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_snack_time_dinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/size_16"
                    android:paddingRight="@dimen/size_16"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/size_8"
                        android:layout_height="@dimen/size_8"
                        android:src="@mipmap/ic_ellipse_blue" />

                    <TextView
                        android:id="@+id/tv_snack_time_dinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_16"
                        android:text="Bữa phụ chiều: " />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_dinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/size_16"
                    android:paddingRight="@dimen/size_16"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/size_8"
                        android:layout_height="@dimen/size_8"
                        android:src="@mipmap/ic_ellipse_blue" />

                    <TextView
                        android:id="@+id/tv_dinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_16"
                        android:text="Bữa phụ chiều: " />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_48"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:text="Nhận xét"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/font_16" />

                    <Spinner
                        android:id="@+id/sp_menu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:background="@android:color/transparent" />
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcl_eat_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="true"
                android:paddingTop="@dimen/size_8" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>