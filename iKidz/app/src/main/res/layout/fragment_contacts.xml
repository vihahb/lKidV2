<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".view.activity.home.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/ln_sleep_activity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_5"
                android:layout_marginLeft="@dimen/size_16"
                android:layout_marginRight="@dimen/size_4"
                android:layout_marginTop="@dimen/size_5"
                android:layout_weight="1"
                android:background="@drawable/round_edittext_login"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="@dimen/size_90"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/size_60"
                        android:layout_height="@dimen/size_60"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/size_8"
                        android:layout_marginTop="@dimen/font_16"
                        android:src="@mipmap/sleep" />

                    <TextView
                        android:id="@+id/tv_notify_class"
                        android:layout_width="@dimen/size_20"
                        android:layout_height="@dimen/size_20"
                        android:layout_marginLeft="@dimen/size_16"
                        android:layout_marginTop="@dimen/size_16"
                        android:background="@drawable/notify_feature"
                        android:visibility="gone" />
                </FrameLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_8"
                    android:gravity="center"
                    android:lines="2"
                    android:paddingLeft="@dimen/size_8"
                    android:paddingRight="@dimen/size_8"
                    android:text="Hoạt động ngủ" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_eat_activity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_5"
                android:layout_marginLeft="@dimen/size_4"
                android:layout_marginRight="@dimen/size_16"
                android:layout_marginTop="@dimen/size_5"
                android:layout_weight="1"
                android:background="@drawable/round_edittext_login"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="@dimen/size_90"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/size_60"
                        android:layout_height="@dimen/size_60"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/size_8"
                        android:layout_marginTop="@dimen/font_16"
                        android:src="@mipmap/eat" />

                    <TextView
                        android:id="@+id/tv_notify_School"
                        android:layout_width="@dimen/size_20"
                        android:layout_height="@dimen/size_20"
                        android:layout_marginLeft="@dimen/size_16"
                        android:layout_marginTop="@dimen/size_16"
                        android:background="@drawable/notify_feature"
                        android:visibility="gone" />
                </FrameLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_8"
                    android:gravity="center"
                    android:lines="2"
                    android:paddingLeft="@dimen/size_8"
                    android:paddingRight="@dimen/size_8"
                    android:text="Hoạt động ăn" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/ln_activity_more"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_5"
                android:layout_marginLeft="@dimen/size_16"
                android:layout_marginRight="@dimen/size_4"
                android:layout_marginTop="@dimen/size_5"
                android:layout_weight="1"
                android:background="@drawable/round_edittext_login"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="@dimen/size_90"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/size_60"
                        android:layout_height="@dimen/size_60"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/size_8"
                        android:layout_marginTop="@dimen/font_16"
                        android:src="@mipmap/attendance" />

                    <TextView
                        android:id="@+id/tv_notify_3"
                        android:layout_width="@dimen/size_20"
                        android:layout_height="@dimen/size_20"
                        android:layout_marginLeft="@dimen/size_16"
                        android:layout_marginTop="@dimen/size_16"
                        android:background="@drawable/notify_feature"
                        android:visibility="gone" />
                </FrameLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_8"
                    android:gravity="center"
                    android:lines="2"
                    android:paddingLeft="@dimen/size_8"
                    android:paddingRight="@dimen/size_8"
                    android:text="Hoạt động khác" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_learn_comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_5"
                android:layout_marginLeft="@dimen/size_4"
                android:layout_marginRight="@dimen/size_16"
                android:layout_marginTop="@dimen/size_5"
                android:layout_weight="1"
                android:background="@drawable/round_edittext_login"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="@dimen/size_90"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/size_60"
                        android:layout_height="@dimen/size_60"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/size_8"
                        android:layout_marginTop="@dimen/font_16"
                        android:src="@mipmap/nhanxetngayhoc" />

                    <TextView
                        android:id="@+id/tv_notify_eat"
                        android:layout_width="@dimen/size_20"
                        android:layout_height="@dimen/size_20"
                        android:layout_marginLeft="@dimen/size_16"
                        android:layout_marginTop="@dimen/size_16"
                        android:background="@drawable/notify_feature"
                        android:visibility="gone" />
                </FrameLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_8"
                    android:gravity="center"
                    android:lines="2"
                    android:paddingLeft="@dimen/size_8"
                    android:paddingRight="@dimen/size_8"
                    android:text="Nhận xét ngày học" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/ln_mbr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_5"
                android:layout_marginLeft="@dimen/size_16"
                android:layout_marginRight="@dimen/size_4"
                android:layout_marginTop="@dimen/size_5"
                android:layout_weight="1"
                android:background="@drawable/round_edittext_login"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="@dimen/size_90"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/size_60"
                        android:layout_height="@dimen/size_60"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/size_8"
                        android:layout_marginTop="@dimen/font_16"
                        android:src="@mipmap/heart" />

                    <TextView
                        android:id="@+id/tv_notify_activity_other"
                        android:layout_width="@dimen/size_20"
                        android:layout_height="@dimen/size_20"
                        android:layout_marginLeft="@dimen/size_16"
                        android:layout_marginTop="@dimen/size_16"
                        android:background="@drawable/notify_feature"
                        android:visibility="gone" />
                </FrameLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_8"
                    android:gravity="center"
                    android:lines="2"
                    android:paddingLeft="@dimen/size_8"
                    android:paddingRight="@dimen/size_8"
                    android:text="Sổ sức khỏe" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_5"
                android:layout_marginLeft="@dimen/size_4"
                android:layout_marginRight="@dimen/size_16"
                android:layout_marginTop="@dimen/size_5"
                android:layout_weight="1"
                android:background="@drawable/round_edittext_login"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="@dimen/size_90"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/size_60"
                        android:layout_height="@dimen/size_60"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/size_8"
                        android:layout_marginTop="@dimen/font_16"
                        android:src="@mipmap/picture_60" />

                    <TextView
                        android:id="@+id/tv_notify_learn"
                        android:layout_width="@dimen/size_20"
                        android:layout_height="@dimen/size_20"
                        android:layout_marginLeft="@dimen/size_16"
                        android:layout_marginTop="@dimen/size_16"
                        android:background="@drawable/notify_feature"
                        android:visibility="gone" />
                </FrameLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_8"
                    android:gravity="center"
                    android:lines="2"
                    android:paddingLeft="@dimen/size_8"
                    android:paddingRight="@dimen/size_8"
                    android:text="Album ảnh" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/ln_shcool_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_5"
                android:layout_marginLeft="@dimen/size_16"
                android:layout_marginRight="@dimen/size_4"
                android:layout_marginTop="@dimen/size_5"
                android:layout_weight="1"
                android:background="@drawable/round_edittext_login"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="@dimen/size_90"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/size_60"
                        android:layout_height="@dimen/size_60"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/size_8"
                        android:layout_marginTop="@dimen/font_16"
                        android:src="@mipmap/hocba" />

                    <TextView
                        android:id="@+id/tv_notify_vote"
                        android:layout_width="@dimen/size_20"
                        android:layout_height="@dimen/size_20"
                        android:layout_marginLeft="@dimen/size_16"
                        android:layout_marginTop="@dimen/size_16"
                        android:background="@drawable/notify_feature"
                        android:visibility="gone" />
                </FrameLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_8"
                    android:gravity="center"
                    android:lines="2"
                    android:paddingLeft="@dimen/size_8"
                    android:paddingRight="@dimen/size_8"
                    android:text="Học bạ" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_learn_activitys"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_5"
                android:layout_marginLeft="@dimen/size_4"
                android:layout_marginRight="@dimen/size_16"
                android:layout_marginTop="@dimen/size_5"
                android:layout_weight="1"
                android:background="@drawable/round_edittext_login"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="@dimen/size_90"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/size_60"
                        android:layout_height="@dimen/size_60"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/size_8"
                        android:layout_marginTop="@dimen/font_16"
                        android:src="@mipmap/ic_hoat_dong_hoc" />

                    <TextView
                        android:id="@+id/tv_learn_activitys"
                        android:layout_width="@dimen/size_20"
                        android:layout_height="@dimen/size_20"
                        android:layout_marginLeft="@dimen/size_16"
                        android:layout_marginTop="@dimen/size_16"
                        android:background="@drawable/notify_feature"
                        android:visibility="gone" />
                </FrameLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_8"
                    android:gravity="center"
                    android:lines="2"
                    android:paddingLeft="@dimen/size_8"
                    android:paddingRight="@dimen/size_8"
                    android:text="Hoạt động học" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>