<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/size_70"
    android:layout_marginTop="@dimen/size_8"
    android:paddingLeft="@dimen/size_8"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_number_row"
            android:layout_width="@dimen/size_24"
            android:layout_height="match_parent"
            android:textColor="@color/black_85"
            android:textSize="@dimen/font_14"
            android:textStyle="bold"
            android:text="1"
            android:gravity="center"/>

        <com.sproject.ikidz.sdk.Utils.RoundImage
            android:id="@+id/img_avatar"
            android:layout_marginLeft="@dimen/size_4"
            android:layout_width="@dimen/size_48"
            android:layout_height="@dimen/size_48"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/size_4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_54">
            <TextView
                android:layout_marginTop="@dimen/size_4"
                android:id="@+id/tv_student_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_100"
                android:textSize="@dimen/font_14"
                android:layout_marginBottom="@dimen/size_2"
                android:text=" VI VH"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_birthday"
                    android:layout_weight=".5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_60"
                    android:textSize="@dimen/font_10"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:paddingLeft="@dimen/size_4"
                    android:text="23/02/2012"
                    android:layout_marginTop="@dimen/size_4"/>
                <LinearLayout
                    android:layout_weight="1"
                    android:weightSum="5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/img_dollar"
                        android:layout_weight="1"
                        android:src="@mipmap/ic_dollar"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_18" />
                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/img_eyes"
                        android:layout_weight="1"
                        android:src="@mipmap/ic_eye_student"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_18" />
                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/img_disease_monitor"
                        android:layout_weight="1"
                        android:src="@mipmap/ic_disease_monitor"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_18" />
                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/img_user"
                        android:layout_weight="1"
                        android:src="@mipmap/ic_student_user"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_18" />
                    <ImageView
                        android:id="@+id/img_more"
                        android:layout_weight="1"
                        android:src="@drawable/ic_more_vert"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_18" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_marginLeft="@dimen/size_94"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0_5"
        android:background="@color/black_40"/>

</LinearLayout>