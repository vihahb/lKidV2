<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient_login"
    android:orientation="vertical"
    tools:context=".view.activity.login.LoginActivity">

    <include layout="@layout/toolbar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/size_200"
                android:layout_height="@dimen/size_200"
                android:padding="@dimen/size_8"
                android:scaleType="fitXY"
                android:src="@mipmap/sodo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/size_8"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/size_32"
            android:paddingRight="@dimen/size_32">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_16">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edtEmail"
                    style="@style/StyleEditTextLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/tv_user_email_recovery"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:paddingLeft="@dimen/size_40"
                    android:singleLine="true"
                    android:textSize="@dimen/font_14"
                    android:textStyle="italic" />

                <ImageView
                    android:layout_width="@dimen/size_30"
                    android:layout_height="@dimen/size_30"
                    android:src="@mipmap/ic_login_user" />
            </FrameLayout>

            <Button
                android:id="@+id/btnSend"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_36"
                android:layout_marginLeft="@dimen/size_16"
                android:layout_marginRight="@dimen/size_16"
                android:background="#EF4738"
                android:text="Gửi"
                android:textAllCaps="true"
                android:textColor="@color/white_100"
                android:textSize="@dimen/font_15"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_8"
            android:gravity="center"
            android:text="Mọi thắc mắc vui lòng liên hệ hotline 01253.896.866"
            android:textColor="@color/white_100"
            android:textSize="@dimen/font_12" />
    </LinearLayout>


</LinearLayout>