<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_84"
    android:layout_marginTop="@dimen/size_8"
    android:orientation="vertical"
    android:paddingLeft="@dimen/size_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_80"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_number_row"
            android:layout_width="@dimen/size_24"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/black_85"
            android:textSize="@dimen/font_14"
            android:textStyle="bold" />

        <com.sproject.ikidz.sdk.Utils.RoundImage
            android:id="@+id/img_avatar"
            android:layout_width="@dimen/size_54"
            android:layout_height="@dimen/size_54"
            android:layout_marginLeft="@dimen/size_8"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_80"
            android:layout_marginLeft="@dimen/size_12"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_2"
                android:layout_marginTop="@dimen/size_4"
                android:text=" VI VH"
                android:textColor="@color/black_100"
                android:textSize="@dimen/font_14" />

            <TextView
                android:id="@+id/tv_eat_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_4"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/yellow"
                android:textSize="@dimen/font_11" />

            <EditText
                android:id="@+id/tv_eat_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_8"
                android:layout_marginTop="@dimen/size_4"
                android:background="@drawable/round_edit_text_small"
                android:ellipsize="end"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="Ghi chÃº"
                android:longClickable="false"
                android:paddingBottom="@dimen/size_4"
                android:paddingLeft="@dimen/size_8"
                android:paddingRight="@dimen/size_8"
                android:paddingTop="@dimen/size_4"
                android:singleLine="true"
                android:textSize="@dimen/font_11" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_state"
            android:layout_width="@dimen/size_20"
            android:layout_height="@dimen/size_20"
            android:layout_marginLeft="@dimen/size_8"
            android:layout_marginRight="@dimen/size_8"
            android:src="@mipmap/ic_waiting"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0_5"
        android:layout_marginLeft="@dimen/size_96"
        android:background="@color/black_40" />

</LinearLayout>