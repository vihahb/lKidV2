<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/size_8"
        android:paddingLeft="@dimen/size_8"
        android:paddingRight="@dimen/size_8"
        android:paddingTop="@dimen/size_8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn ngày"
            android:textColor="@color/black_75"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_8"
            android:layout_weight="1">

            <EditText
                android:id="@+id/edt_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_edit_text_attended"
                android:focusableInTouchMode="false"
                android:longClickable="false"
                android:paddingBottom="@dimen/size_4"
                android:paddingLeft="@dimen/size_8"
                android:paddingRight="@dimen/size_28"
                android:paddingTop="@dimen/size_4"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_14" />

            <ImageView
                android:layout_width="@dimen/size_24"
                android:layout_height="@dimen/size_24"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/size_8"
                android:padding="@dimen/size_4"
                android:src="@mipmap/ic_calendar" />
        </FrameLayout>


        <Button
            android:id="@+id/btn_update"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_30"
            android:layout_marginLeft="@dimen/size_8"
            android:background="@drawable/button_radius_color_primary"
            android:text="Cập nhật"
            android:textAllCaps="false"
            android:textColor="@color/white_100"
            android:textSize="@dimen/font_12" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/size_8"
        android:paddingRight="@dimen/size_8">

        <CheckBox
            android:id="@+id/chk_check_all_out"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_36"
            android:background="@android:color/transparent"
            android:text="Chọn tất về"
            android:textAllCaps="false"
            android:textColor="@color/black_65"
            android:textSize="@dimen/font_11" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="@dimen/size_48"
            android:paddingRight="@dimen/size_48"
            android:text="@string/mesage_no_data"
            android:textSize="@dimen/font_16"
            android:visibility="gone" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcl_attendanced_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>
</LinearLayout>