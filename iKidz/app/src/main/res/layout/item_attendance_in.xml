<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_64"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/size_8"
    android:paddingTop="@dimen/size_8">

    <TextView
        android:id="@+id/tv_number_row"
        android:layout_width="@dimen/size_24"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/black_85"
        android:textSize="@dimen/font_14"
        android:textStyle="bold" />

    <com.sproject.ikidz.sdk.Utils.RoundImage
        android:id="@+id/img_avatar"
        android:layout_width="@dimen/size_48"
        android:layout_height="@dimen/size_48"
        android:layout_marginLeft="@dimen/size_8"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_54"
        android:layout_marginLeft="@dimen/size_8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_attend_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_2"
            android:text=" VI VH"
            android:textColor="@color/black_100"
            android:textSize="@dimen/font_13" />

        <RadioGroup
            android:id="@+id/rdo_group_in"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_22"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rdo_cophep"
                android:layout_width="@dimen/size_0"
                android:layout_height="@dimen/size_24"
                android:layout_weight="1.1"
                android:clickable="false"
                android:text="Có phép"
                android:textSize="@dimen/font_9"
                android:theme="@style/RadioButtonYellow" />

            <RadioButton
                android:id="@+id/rdo_khongphep"
                android:layout_width="@dimen/size_0"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:clickable="false"
                android:text="Không phép"
                android:textSize="@dimen/font_9"
                android:theme="@style/RadioButtonRed" />

            <RadioButton
                android:id="@+id/rdo_denlop"
                android:layout_width="@dimen/size_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false"
                android:text="Đến lớp"
                android:textSize="@dimen/font_9"
                android:theme="@style/RadioButtonGreen" />
        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0_5"
            android:layout_marginLeft="@dimen/size_4"
            android:layout_marginTop="@dimen/size_4"
            android:background="@color/black_40" />
    </LinearLayout>

</LinearLayout>