<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_75">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/size_24"
        android:layout_marginRight="@dimen/size_24"
        android:background="@drawable/round_layout_dialog"
        android:minHeight="@dimen/size_100"
        android:orientation="vertical">
        <!--round_edittext_login-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/size_12"
                android:paddingTop="@dimen/size_12"
                android:text="Giờ ngủ mặc định"
                android:textAllCaps="false"
                android:textColor="@color/black_75"
                android:textSize="@dimen/font_15" />

            <ImageView
                android:layout_width="@dimen/size_24"
                android:layout_height="@dimen/size_24"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_48"
                android:src="@mipmap/ic_alarm_clock" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0_5"
            android:background="@color/black_55" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="@dimen/size_100"
            android:orientation="vertical"
            android:padding="@dimen/size_16">

            <LinearLayout
                android:paddingLeft="@dimen/size_16"
                android:paddingRight="@dimen/size_16"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/size_8"
                        android:layout_height="@dimen/size_8"
                        android:src="@drawable/ic_ellipse_gray" />

                    <TextView
                        android:layout_marginLeft="@dimen/size_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bắt đầu" />
                </LinearLayout>

                <EditText
                    android:id="@+id/edt_start"
                    android:layout_weight=".7"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_30"
                    android:background="@drawable/round_edit_text_small"
                    android:ellipsize="end"
                    android:text="14:00"
                    android:gravity="center"
                    android:hint="Ghi chú"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:longClickable="false"
                    android:textColor="@color/green_dark_bold"
                    android:singleLine="true"
                    android:paddingLeft="@dimen/size_8"
                    android:paddingRight="@dimen/size_8"
                    android:textSize="@dimen/font_11" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/size_8"
                android:paddingLeft="@dimen/size_16"
                android:paddingRight="@dimen/size_16"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/size_8"
                        android:layout_height="@dimen/size_8"
                        android:src="@drawable/ic_ellipse_gray" />

                    <TextView
                        android:layout_marginLeft="@dimen/size_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kết thúc" />
                </LinearLayout>

                <EditText
                    android:id="@+id/edt_end"
                    android:layout_weight=".7"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_30"
                    android:background="@drawable/round_edit_text_small"
                    android:ellipsize="end"
                    android:text="14:00"
                    android:gravity="center"
                    android:hint="Ghi chú"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:longClickable="false"
                    android:textColor="@color/red_dark"
                    android:singleLine="true"
                    android:paddingLeft="@dimen/size_8"
                    android:paddingRight="@dimen/size_8"
                    android:textSize="@dimen/font_11" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0_5"
            android:background="@color/black_55" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAgree"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="Cập nhật"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>