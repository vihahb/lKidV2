<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient_login"
    android:orientation="vertical"
    tools:context=".view.activity.login.LoginActivity">

    <include layout="@layout/toolbar_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/size_160"
                    android:layout_height="@dimen/size_160"
                    android:padding="@dimen/size_24"
                    android:scaleType="fitXY"
                    android:src="@mipmap/sodo" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/size_8"
                android:orientation="vertical"
                android:paddingLeft="@dimen/size_32"
                android:paddingRight="@dimen/size_32">

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/sp_province"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_16"
                    android:background="@android:color/transparent" />

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/sp_district"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_16"
                    android:background="@android:color/transparent" />

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/sp_school"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_16"
                    android:background="@android:color/transparent" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_16">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/edtUserName"
                        style="@style/StyleEditTextLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/tv_user_name"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:paddingLeft="@dimen/size_40"
                        android:singleLine="true"
                        android:textSize="@dimen/font_14"
                        android:textStyle="italic" />

                    <ImageView
                        android:layout_width="@dimen/size_30"
                        android:layout_height="@dimen/size_30"
                        android:src="@mipmap/ic_login_user" />
                </FrameLayout>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_16">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/edtPassword"
                        style="@style/StyleEditTextLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/tv_user_pass"
                        android:imeOptions="actionGo"
                        android:inputType="textPassword"
                        android:paddingLeft="@dimen/size_40"
                        android:singleLine="true"
                        android:textSize="@dimen/font_14"
                        android:textStyle="italic" />

                    <ImageView
                        android:layout_width="@dimen/size_30"
                        android:layout_height="@dimen/size_30"
                        android:src="@mipmap/ic_login_user" />
                </FrameLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_16"
                    android:orientation="horizontal">
                    <!--<android.support.v7.widget.AppCompatCheckBox-->
                    <!--android:id="@+id/chk_remember"-->
                    <!--android:layout_weight="1.3"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="Ghi nhớ đăng nhập"-->
                    <!--android:textSize="@dimen/font_11"-->
                    <!--android:textColor="@color/white_100"/>-->

                    <TextView
                        android:id="@+id/tv_reset"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".7"
                        android:gravity="center"
                        android:text="@string/tv_forgot_pass"
                        android:textColor="#00C3AE"
                        android:textSize="@dimen/font_11" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_36"
                    android:layout_marginBottom="@dimen/size_24"
                    android:layout_marginLeft="@dimen/size_16"
                    android:layout_marginRight="@dimen/size_16"
                    android:background="#EF4738"
                    android:text="Đăng nhập"
                    android:textAllCaps="true"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/font_15"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Mọi thắc mắc vui lòng liên hệ hotline 01253.896.866"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>