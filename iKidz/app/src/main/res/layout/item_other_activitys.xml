<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/size_4"
    android:paddingLeft="@dimen/size_8"
    android:paddingTop="@dimen/size_4">

    <TextView
        android:id="@+id/tv_number_row"
        android:layout_width="@dimen/size_24"
        android:layout_height="match_parent"
        android:gravity="top|center_horizontal"
        android:paddingTop="@dimen/size_24"
        android:text="1"
        android:textColor="@color/black_85"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="@dimen/size_48"
                android:layout_height="@dimen/size_64">

                <com.snq.teacher.sdk.Utils.RoundImage
                    android:id="@+id/img_avatar"
                    android:layout_width="@dimen/size_48"
                    android:layout_height="@dimen/size_48"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_student_user" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_8"
                android:layout_weight=".6"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hoc sinh"
                    android:textColor="@color/black_85"
                    android:textSize="@dimen/font_15" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_8"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edt_note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/size_8"
                        android:background="@drawable/round_edit_text_small"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="top"
                        android:hint="Ghi chÃº"
                        android:longClickable="false"
                        android:paddingBottom="@dimen/size_4"
                        android:paddingLeft="@dimen/size_8"
                        android:paddingTop="@dimen/size_4"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/font_12" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_0_5"
                        android:layout_marginTop="@dimen/size_4"
                        android:background="@color/black_60" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>