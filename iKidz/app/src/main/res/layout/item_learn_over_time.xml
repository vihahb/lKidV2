<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/size_70"
    android:layout_marginTop="@dimen/size_8"
    android:paddingLeft="@dimen/size_8">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_number_row"
            android:layout_width="@dimen/size_24"
            android:layout_height="match_parent"
            android:textColor="@color/black_85"
            android:textSize="@dimen/font_14"
            android:textStyle="bold"
            android:text="1"
            android:gravity="center"/>

        <com.sproject.ikidz.sdk.Utils.RoundImage
            android:id="@+id/img_avatar"
            android:layout_marginLeft="@dimen/size_8"
            android:layout_width="@dimen/size_48"
            android:layout_height="@dimen/size_48"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/size_12"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_54">
            <TextView
                android:layout_marginTop="@dimen/size_4"
                android:id="@+id/tv_learn_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_100"
                android:textSize="@dimen/font_14"
                android:layout_marginBottom="@dimen/size_2"
                android:text=" VI VH"/>

            <TextView
                android:id="@+id/tv_learn_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_60"
                android:textSize="@dimen/font_11"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/size_8"/>
        </LinearLayout>

        <ImageView
            android:visibility="gone"
            android:layout_marginLeft="@dimen/size_8"
            android:layout_marginRight="@dimen/size_8"
            android:id="@+id/img_state"
            android:src="@mipmap/ic_waiting"
            android:layout_width="@dimen/size_20"
            android:layout_height="@dimen/size_20"/>
    </LinearLayout>

    <View
        android:layout_marginLeft="@dimen/size_96"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0_5"
        android:background="@color/black_40"/>

</LinearLayout>