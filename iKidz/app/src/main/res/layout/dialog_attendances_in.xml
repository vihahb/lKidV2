<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_75">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/size_24"
        android:layout_marginRight="@dimen/size_24"
        android:background="@drawable/round_layout_dialog"
        android:minHeight="@dimen/size_100"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/size_12"
            android:paddingTop="@dimen/size_12"
            android:text="Chi tiết điểm danh"
            android:textAllCaps="true"
            android:textColor="@color/black_75"
            android:textSize="@dimen/font_15" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0_5"
            android:background="@color/black_55" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="@dimen/size_100"
            android:orientation="vertical"
            android:padding="@dimen/size_16">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nguyen van A"
                android:textColor="@color/black_75"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="@dimen/font_16" />

            <TextView
                android:layout_marginTop="@dimen/size_8"
                android:paddingLeft="@dimen/size_4"
                android:id="@+id/tv_state"
                android:layout_marginBottom="@dimen/size_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trạng thái"
                android:textColor="@color/black_75"
                android:textSize="@dimen/font_11" />

            <RadioGroup
                android:id="@+id/rdo_group_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rdo_cophep"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_24"
                    android:text="Có phép"
                    android:textSize="@dimen/font_9"
                    android:theme="@style/RadioButtonYellow" />

                <RadioButton
                    android:id="@+id/rdo_khongphep"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_24"
                    android:text="Không phép"
                    android:textSize="@dimen/font_9"
                    android:theme="@style/RadioButtonRed" />

                <RadioButton
                    android:id="@+id/rdo_denlop"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_24"
                    android:text="Đến lớp"
                    android:textSize="@dimen/font_9"
                    android:theme="@style/RadioButtonGreen" />
            </RadioGroup>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0_5"
            android:background="@color/black_55" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnClose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="Đóng"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <View
                android:layout_width="@dimen/size_0_5"
                android:layout_height="match_parent"
                android:background="@color/black_55" />

            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="Cập nhật"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>